<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <h4>Please, leave your review</h4>
    <%= form_for :review, url: product_reviews_path(@product.id) do |f| %>
      <li>Description: <%= f.text_area :description %></li>
      <li>Rating: <%= f.select :rating, [1, 2, 3, 4, 5] %></li>
      <li><%= f.submit "Submit" %></li>
    <% end %>


    <% @product.reviews.each do |review| %>
    <div>Rating: <%= review.rating %></div>
    <div>Comment: <%= review.description %></div>
    <% end %>

  </article>

</section>
